{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++ make",
            "type": "shell",
            "command": "make",
            "args": ["deploy"],
            "options": {
                "cwd": "${workspaceFolder}/sw/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [ "$gcc" ],
            "presentation": {
                "reveal": "always",
            }
        }
    ]
}